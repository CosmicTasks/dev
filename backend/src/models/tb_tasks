const { DataTypes } = require(`sequelize`)
//conexao com banco
const { connectionDatabase } = require('../configTable/dfTable.js')
const { _padraoTableDBExistence } = require('../configTable/dfTable.js')

const ModelTasks = connectionDatabase.define('tb_tasks', {
    id: {
        type: DataTypes.INTEGER.UNSIGNED,
        autoIncrement: true,
        primaryKey: true,
    },
    id_lista: {
        type: DataTypes.INTEGER.UNSIGNED,
        allowNull: false,
        references: {
            model: 'tb_lista',
            key: 'id'
        }
    },
    id_user: {
        type: DataTypes.INTEGER.UNSIGNED,
        allowNull: false,
        references: {
            model: 'tb_user',
            key: 'cd_user'
        }
    },
    nome: {
        type: DataTypes.STRING(100),
        allowNull: false
    },
    description: {
        type: DataTypes.TEXT,
        allowNull: true
    },
    created_at: {
        type: DataTypes.DATE,
        defaultValue: DataTypes.NOW
    },
    status: {
        type: DataTypes.ENUM('pending', 'completed'),
        defaultValue: 'pending'
    },
    prioridade: {
        type: DataTypes.STRING(100),
        allowNull: true
    }
}, _padraoTableDBExistence('tb_tasks')
)

module.esports = {
    ModelTasks
}

